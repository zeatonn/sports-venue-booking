generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "mysql"
  url      = env("DATABASE_URL")
}

model Center {
  id       String  @unique
  name     String
  location String
  desc     String? @db.Text

  sports SportCenter[]

  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  @@id([id])
}

model Sport {
  id   String  @unique
  name String
  desc String? @db.Text

  centers SportCenter[]

  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  @@id([id])
}

model SportCenter {
  id       String @unique
  sportId  String
  centerId String

  courts Court[]

  sport  Sport  @relation(fields: [sportId], references: [id])
  center Center @relation(fields: [centerId], references: [id])

  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  @@id([id])
}

model Court {
  id            String  @unique
  name          String
  desc          String?
  sportCenterId String

  sportCenter SportCenter @relation(fields: [sportCenterId], references: [id])

  bookings Booking[]

  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  @@id([id])
}

model Booking {
  id        String   @unique
  startTime DateTime
  endTime   DateTime
  courtId   String
  comments  String?

  court Court @relation(fields: [courtId], references: [id])

  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  @@id([id])
}
